<Page
    x:Class="NeoIsisJob.Views.WorkoutPage"
    x:Name="This"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NeoIsisJob.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid">
        <!-- Top Navigation -->
        <NavigationView x:Name="nvSample" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Main" Tag="MainPage" Tapped="GoToMainPage_Tap"/>
                <NavigationViewItem Content="Calendar" Tag="CalendarPage" Tapped="GoToCalendarPage_Tap"/>
                <NavigationViewItem Content="Workouts" Tag="WorkoutPage" Tapped="GoToWorkoutPage_Tap"/>
                <NavigationViewItem Content="Classes" Tag="ClassPage" Tapped="GoToClassPage_Tap"/>
                <NavigationViewItem Content="Rankings" Tag="RankingPage" Tapped="GoToRankingPage_Tap"/>
            </NavigationView.MenuItems>
            <Frame x:Name="contentFrame"/>
        </NavigationView>

        <!-- Main Content -->
        <StackPanel Margin="10,60,10,10" Spacing="10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <!--<Button Content="Filter" Width="100"/>-->
                <Button Content="Create" Width="100" Click="CreateButton_Click"/>

            </StackPanel>

            <StackPanel>
                <TextBlock Text="Select Workout Types:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding WorkoutTypes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" FontSize="14"
                              Click="WorkoutTypeCheckBox_Click"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <GridView x:Name="WorkoutGrid" ItemsSource="{Binding Workouts}" Margin="10" IsItemClickEnabled="True" ItemClick="GoToSelectedWorkoutPage_Click">
                <GridView.ItemTemplate >
                    <DataTemplate>
                        <StackPanel Width="150" Height="200" Background="White" Padding="10" CornerRadius="10">
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Delete" 
                                    Click="DeleteWorkoutButton_Click"
                                    Tag="{Binding Id}" />           
                                <Button Content="Edit" Click="EditWorkoutButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>

        <!-- True Popup for Editing -->
        <Popup x:Name="EditWorkoutPopup" IsLightDismissEnabled="True">
            <Grid Width="{Binding ElementName=RootGrid, Path=ActualWidth}" 
                  Height="{Binding ElementName=RootGrid, Path=ActualHeight}" 
                  Background="#80000000">

                <!-- Centered Popup -->
                <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="Black" BorderThickness="2" 
                        Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Edit Workout" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBox x:Name="WorkoutNameTextBox" PlaceholderText="Enter new name" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                            <Button Content="Update" Click="UpdateWorkoutButton_Click" />
                            <Button Content="Cancel" Click="CancelEditWorkoutButton_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Popup>
    </Grid>
</Page>
